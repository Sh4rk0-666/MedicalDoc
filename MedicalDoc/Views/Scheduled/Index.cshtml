@model List<Appointment>
@{
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Appointment List</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item text-pforange">Home</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Scheduled Appointments</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Patient Name</th>
                                    <th>Appointment Date</th>
                                    <th>Description</th>
                                    <th>Status</th>
                                    <th>Notes</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var appointment in Model)
                                {
                                    <tr>
                                        <td>
                                            <a asp-action="Details" asp-controller="Patients" asp-route-id="@appointment.IdPatient">
                                                @appointment.IdPatientNavigation.FirstName @appointment.IdPatientNavigation.LastName
                                            </a>
                                        </td>
                                        <td>@appointment.DateTime?.ToShortDateString()</td>
                                        <td>@appointment.Description</td>
                                        <td>@appointment.Status</td>
                                        <td>@appointment.AdditionalNotes</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>
